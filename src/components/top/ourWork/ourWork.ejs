<%
  const ourwork = [
    {
      title: '株式会社グラニフ様',
      text: '生産管理／商品企画管理／EC情報管理／<br class="-hidden-sp">経理／コラボレーション管理',
      image: 'graniph_logo',
      link: 'ourwork-1'
    },
    {
      title: '株式会社シューズセレクション様',
      text: '【商品管理システム】<br>商品マスタ／発注管理／入荷管理／在庫管理<br>【営業管理システム】<br>テレアポ管理／営業活動管理／取引先管理／予算管理',
      image: 'shusselection_logo',
      link: 'ourwork-2'
    },
    {
      title: '大手インテリア会社様',
      text: '商品情報管理システム／品質管理システム／<br class="-hidden-sp">各種帳票の自動化',
      image: 'noimage_logo',
      link: 'ourwork-3'
    },
    {
      title: '株式会社アスタリスク様',
      text: '派遣者情報管理／採用情報管理／取引先・案件管理／<br class="-hidden-sp">支給・寮管理／給与管理',
      image: 'asterisk_logo',
      link: 'ourwork-4'
    },
    {
      title: '株式会社ヴァンクラフト様',
      text: '案件管理／見積書作成／請求書作成／売上集計／<br class="-hidden-sp">原価計算／小口精算／小口精算承認機能',
      image: 'vancraft_logo',
      link: 'ourwork-5'
    },
  ]
%>
<div class="our_work">
  <div class="layout">
    <div class="show-animation" data-animation="title">
      <h2 class="section-title">Our Work</h2>
      <span class="section-title-child">開発・運用実績</span>
    </div>
  </div>
  <div id="ourWorkSlide" class="our_work-slide">
    <div class="our_work-background">
      <div class="layout"></div>
    </div>
    <div class="layout">
      <div class="swiper">
        <div class="swiper-pagination"></div>
        <div class="swiper-wrapper">
          <% ourwork.forEach(function (value, key) { %>
            <div class="swiper-slide">
              <a class="box" href="<%- value.link %>">
                <% if (value.image) { %>
                <div class="img-wrapper">
                  <img src="<%= conf.assets.commonImage %>/<%- value.image %>.jpg" alt="" />
                </div>
                <% } %>
                <h2><%- value.title %></h2>
                <p><%- value.text %></p>
              </a>
            </div>
          <% }); %>
        </div>
        <div class="swiper-button">
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
      </div>
    </div>
  </div>
</div>